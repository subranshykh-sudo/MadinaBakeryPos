<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--SIDEBAR BTN STYLING-->
    <Style x:Key="SidebarButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="44"/>
        <Setter Property="Margin" Value="0,3"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#2D3748"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bg"
                        Background="{TemplateBinding Background}"
                        CornerRadius="8">

                        <ContentPresenter
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="#E6F0FF"/>
                            <Setter Property="Foreground" Value="#1A56DB"/>
                        </Trigger>

                        <!-- Pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="#DCE7FF"/>
                        </Trigger>

                        <!-- Active / Selected -->
                        <Trigger Property="IsDefaulted" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="#1A56DB"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--SIDEBAR BTN STYLING-->
    
    <!--SIDEBAR STYLING-->
    <Style x:Key="SidebarContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="BorderBrush" Value="#E5E7EB"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>
    <!--SIDEBAR STYLING-->

</ResourceDictionary>