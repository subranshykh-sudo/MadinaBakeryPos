<UserControl x:Class="MadinaBakeryPos.Views.DashboardCards"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadinaBakeryPos.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.Row="1" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Border Background="LightCoral" Padding="18" Margin="6" Grid.Column="0" Cursor="Hand">
            <StackPanel>
                <TextBlock Text="NEW SALE"
            Foreground="White"
            FontSize="12" FontWeight="SemiBold" />
                <TextBlock Text="F1"
            FontSize="24"
                        Foreground="White"
            FontWeight="Bold"/>
            </StackPanel>
        </Border>
        <Border Background="LightGreen" Padding="18" Margin="6" Grid.Column="1" Cursor="Hand">
            <StackPanel>
                <TextBlock Text="TOTAL SALES"
                        Foreground="White"
            FontWeight="SemiBold"
            FontSize="12"/>
                <TextBlock Text="Rs.12,450"
            FontSize="24"
                        Foreground="White"
            FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Border Background="LightPink"  Padding="18" Margin="6" Grid.Column="2" Cursor="Hand">
            <StackPanel>
                <TextBlock Text="CUSTOMER COUNT"
            Foreground="White" FontWeight="SemiBold"
            FontSize="12"/>
                <TextBlock Text="86"
                        Foreground="White"
            FontSize="24"
            FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Border Background="LightSalmon" Padding="18" Margin="6" Grid.Column="3" Cursor="Hand">
            <StackPanel>
                <TextBlock Text="TOTAL PRODUCTS"
                        Foreground="White" FontWeight="SemiBold"
    
            FontSize="12"/>
                <TextBlock Text="142"
            FontSize="24"
                        Foreground="White"
            FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Border Background="LightSteelBlue" Padding="18" Margin="6" Grid.Column="4" Cursor="Hand">
            <StackPanel>
                <TextBlock Text="LOW STOCK"
            FontSize="12"
                        Foreground="White"
                        FontWeight="SemiBold"
                        />
                <TextBlock Text="7"
                        Foreground="White"
                        FontSize="24"
            FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
