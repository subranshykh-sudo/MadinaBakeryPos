<UserControl x:Class="MadinaBakeryPos.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Padding="20" Width="Auto">
 <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding test}"
                   FontSize="26"
                   VerticalAlignment="Bottom"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Foreground="Black"
                   Opacity="0.7"
                  />

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Border Background="LightCoral" Padding="18" Margin="6" Grid.Column="0" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="NEW SALE"
                   Foreground="White"
                   FontSize="12" FontWeight="SemiBold" />
                    <TextBlock Text="F1"
                   FontSize="24"
                               Foreground="White"
                   FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Background="LightGreen" Padding="18" Margin="6" Grid.Column="1" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="TOTAL SALES"
                               Foreground="White"
                   FontWeight="SemiBold"
                   FontSize="12"/>
                    <TextBlock Text="{Binding TotalSales}"
                   FontSize="24"
                               Foreground="White"
                   FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Background="LightPink"  Padding="18" Margin="6" Grid.Column="2" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="CUSTOMER COUNT"
                   Foreground="White" FontWeight="SemiBold"
                   FontSize="12"/>
                    <TextBlock Text="86"
                               Foreground="White"
                   FontSize="24"
                   FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Background="LightSalmon" Padding="18" Margin="6" Grid.Column="3" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="TOTAL PRODUCTS"
                               Foreground="White" FontWeight="SemiBold"
           
                   FontSize="12"/>
                    <TextBlock Text="142"
                   FontSize="24"
                               Foreground="White"
                   FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Background="LightSteelBlue" Padding="18" Margin="6" Grid.Column="4" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="LOW STOCK"
                   FontSize="12"
                               Foreground="White"
                               FontWeight="SemiBold"
                               />
                    <TextBlock Text="7"
                               Foreground="White"
                               FontSize="24"
                   FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2"
        CornerRadius="8" Margin="0,12,0,0">

            <StackPanel>
                <TextBlock Text="Recent Sales"
                   FontSize="18"
                   FontWeight="SemiBold"
                           Margin="0,0,0,6"
                           Foreground="Black"
                           />

                <DataGrid 
                    ItemsSource="{Binding RecentSales}"
                    AutoGenerateColumns="False"
                    HeadersVisibility="Column"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    GridLinesVisibility="None"
                    AlternatingRowBackground="#F7F7F7"
                    AlternationCount="2"
                    RowHeaderWidth="0"
                    SelectionUnit="FullRow">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Normal"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E8F1FF"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Trigger>

                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderThickness" Value="0"/>

                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding SaleId}"/>
                        <DataGridTextColumn Header="ITEMS" Binding="{Binding Quantity}"/>
                        <DataGridTextColumn Header="TOTAL" Binding="{Binding Subtotal}"/>
                        <DataGridTextColumn Header="PRICE" Binding="{Binding UnitPrice}"/>

                    </DataGrid.Columns>

                </DataGrid>

            </StackPanel>
        </Border>
    </Grid> 


</UserControl>
